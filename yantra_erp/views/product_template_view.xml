<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_inherit_yantra" model="ir.ui.view">
        <field name="name">product.template.form.inherit.yantra</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/notebook" position="inside">
                <page string="Machine Specifications">
                    <group col="3">

                        <!-- MEASUREMENTS & MACHINE DATA -->
                        <group string="Technical Specifications">
                            <field name="height_id"/>
                            <field name="width_id"/>
                            <field name="length_id"/>
                            <field name="drill_dia_id"/>
                            <field name="plate_thickness_id"/>
                            <field name="spindle_type_id"/>
                            <field name="spindle_motor_power_id"/>
                            <field name="spindle_rpm_id"/>
                            <field name="machine_structure_id"/>
                            <field name="prefered_operation_id"/>
                        </group>

                        <!-- OTHER SPECIFICATIONS (MANUAL ENTRY) -->
                        <group string="Other Specifications">
                            <field name="cnc_controller"/>
                            <field name="positional_accuracy"/>
                            <field name="spindle_motor"/>
                            <field name="driving_motor"/>
                            <field name="machine_category"/>
                        </group>

                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
